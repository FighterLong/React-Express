
ul,li,p{
    list-style: none
    padding: 0
    margin: 0
}
.authorityManagement{
    // display: flex
    width: 100%
    height: auto !important
    padding: 20px
    overflow: auto

    &-nav{
        width: 230px
        height: 100%
        // float: left
        flex: 0 1 0%
        // border: 1px solid #f0f0f0
        box-shadow: 2px 2px 10px 2px #ededed

        &-title {
            height: 48px
            background: #207ad9
            font-size: 17px
            color: #fff
            line-height: 48px
            text-align: center
        }

        &-search {
            text-align: center
            padding: 10px
        }

        &-list {
            height: 80%
            overflow: auto
            border-top: 1px solid #f0f0f0
            border-bottom: 1px solid #f0f0f0

            li {
                padding: 0 15px
                height: 40px
                line-height: 40px
                border-bottom: 1px solid #f0f0f0
                display: flex
                justify-content: space-between
                align-items: center
                .userName {
                    color: #333
                    flex: 1
                    text-align: left
                    padding-left: 10px
                    box-sizing: border-box
                    cursor: pointer
                    line-height: normal
                }
            }
            .active{
                background: #e6ecf5
            }
        }
    }
}
.ant-checkbox-wrapper + .ant-checkbox-wrapper{
    margin-left: 0 !important
}
.ant-checkbox-wrapper{
    margin-right: 8px !important    
}
.ant-modal-mask,.ant-modal-wrap{
    z-index: 1031 !important
}
.authorityUser{
    width: 100%
    height: 100%

    &-top {
        width: 100%
        padding: 15px 0
        display: flex
        justify-content: space-between

        button{
            margin-left: 20px
        }
    }
}