.department {
  .department-ant-upload-text, .ant-upload-select-picture-card {
    margin-top: 8px;
    color: #666;
  }
  
  .form .ant-upload{
    margin: 0
  }
  .box{
    width: 100%
    display: inline-block
    min-height: 200px
    border: 1px solid #d6d6d6
    border-radius: 5px
    margin-bottom: 1rem
    &-title{
        height: 38px
        background: #f0f0f0
        padding: 0
        line-height: 38px
        padding-left: 10px
        font-size: 14px
        margin: 0
      }
    &-content{
        padding: 10px
        font-size: 13px
      }
  }
}
.ant-upload {
  margin: 0 !important
}