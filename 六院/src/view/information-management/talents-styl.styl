p{
    margin-bottom: 0
}
.recruitInterview {
  width: 80%;
  height: auto;
  border: 1px solid #dddddd;
}
.interviewHead {
  width: 100%;
  height: 198px;
  padding: 30px;
  background-color: #f7f7f7;
  border-bottom: 1px solid #dddddd;
}
.headerImg {
  display: inline-block;
  float: left;
  width: 100px;
  height: 100%;
  margin-right: 20px
}
.headerContent {
  display: inline-block;
  float: left;
  width: 60%;
  height: 100%;
}
p {
  width: 100%;
  margin: 0;
  padding: 0;
}
.name {
  height: 32px;
  line-height: 32px;
  font-size: 24px;
}
.others {
  height: 22px;
  margin-top: 8px;
  line-height: 22px;
  font-size: 16px;
  margin-bottom: 0 !important
}
.interviewJob, .interviewInformation, .interviewStudy, .interviewWorking, .interviewPublish, .interviewFund, .interviewArticle, .interviewOther, .interviewFoot {
  width: 100%;
  height: auto;
  padding-top: 30px;
  border-bottom: 1px solid #dedede;
}
.title {
  text-align: left;
  margin-left: 30px;
  height: 25px;
  line-height: 25px;
  // margin-top: 31px;
  font-size: 20px;
  font-weight: bold;
  color: #e25049;
}
.jobContent {
  display: flex;
  width: 93.2%;
  height: auto;
  margin-left: 3.6%;
  margin-top: 20px;
  border-bottom: 1px dotted #dedede;
}
.contentTitle {
  width: 100%;
  height: 22px;
  line-height: 22px;
  font-size: 18px;
  color: #777777;
}
.contentIndex {
  width: 100%;
  height: 53px;
  margin-top: 4px;
  line-height: 22px;
  font-size: 16px;
  color: #000000;
}
.informationContent, .studyContent, .workingContent, .fundContent, .articleContent {
  display: flex;
  width: 93.2%;
  height: auto;
  margin-left: 3.6%;
  margin-top: 20px;
}
.publishContent, .otherContent, .footContent {
  width: 93.2%;
  height: auto;
  margin-left: 3.6%;
  margin-top: 20px;
  margin-bottom: 30px;
  line-height: 22px;
  font-size: 16px;
}
